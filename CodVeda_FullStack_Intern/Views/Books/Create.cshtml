@model CodVeda_FullStack_Intern.Models.Book

@{
    ViewData["Title"] = "Add New Book";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-0">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Add a New Book</h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" method="post">

                        <div class="mb-3">
                            <label class="form-label fw-bold">Book Title</label>
                            <input asp-for="Title" class="form-control" placeholder="Enter book title" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Publisher</label>
                            <input asp-for="Publisher" class="form-control" placeholder="Enter publisher" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Publish Date (Year)</label>
                            <input asp-for="PublishDate" class="form-control" placeholder="e.g. 2026" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Summary</label>
                            <textarea asp-for="Summary" class="form-control" rows="4" placeholder="Brief summary of the book..." required></textarea>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success">Add to Library</button>
                            <a asp-action="Index" class="btn btn-outline-secondary">Back to Catalog</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
